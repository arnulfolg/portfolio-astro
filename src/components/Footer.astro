---
import type { EntryFieldTypes } from 'contentful';
import './../styles/components/Footer.css'
import { contentfulClient } from '../lib/contentful';
import { getLocale } from '../scripts/getLocale';

const { pathname } = Astro.url

interface CVHeadings {
  contentTypeId: "headings",
  fields: {
    heading: EntryFieldTypes.Text
  }
}

const letstalk = await contentfulClient.getEntry<CVHeadings>('2JKBOifyd5Ab8br6vKYH6m', {
	locale: getLocale(pathname.split('/')[1])
});
const copyright = await contentfulClient.getEntry<CVHeadings>('6LUAZri2OCvJyO0scmN133', {
	locale: getLocale(pathname.split('/')[1])
});

