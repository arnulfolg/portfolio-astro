---
const { language, text, pathname } = Astro.props;
---

<button id="languageButton" class="toggleButton dark:outline-white">
	<i class="fa-solid fa-language"></i>
	<span>{text}</span>
</button>

<script is:inline define:vars={{language, pathname}}>
	const button = document.querySelector('button#languageButton');

	button?.addEventListener('click', () => {
		const changelanguage = `/${language}/${pathname.slice(4)}`
		location.href = changelanguage
	});
</script>